{
  "manifest_version": 2,
  "name": "Poddy Chrome Extension",
  "short_name": "Poddy",
  "author": "andreyjkee",
  "version": "0.0.1",
  "description": "A podcast aggregator for Chrome",
  "default_locale": "en",
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "alarms",
    "notifications",
    "contextMenus",
    "idle",
    "http://*/",
    "https://*/"
  ],
  "browser_action": {
    "default_title": "Poddy"
  },
  "content_scripts": [
    {
      "js": ["contentPage.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "scripts": ["backgroundPage.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
